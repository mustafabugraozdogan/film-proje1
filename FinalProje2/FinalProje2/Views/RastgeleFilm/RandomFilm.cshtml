@model Film

@{
    ViewData["Title"] = "RandomFilm";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şanslı Film</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            padding: 0 70px;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0f0f0f;
            color: #e0e0e0;
        }

        .container {
            max-width: 900px;
            margin: 100px auto;
            padding: 20px;
            background-color: #1a1a1a;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
        }

        /* Movie Card */
        .movie-card {
            display: flex;
            flex-wrap: wrap;
            align-items: flex-start;
            gap: 20px;
        }

        .movie-poster img {
            width: 250px;
            height: auto;
            border-radius: 10px;
            object-fit: cover;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
        }

        .movie-info {
            flex: 1;
        }

        .movie-title {
            font-size: 2em;
            font-weight: bold;
            color: steelblue;
            margin-bottom: 10px;
        }

        .movie-details {
            margin-top: 10px;
            font-size: 0.95em;
            line-height: 1.6;
        }

        .cta-container {
            margin-top: 30px;
        }

        .cta-text {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 15px;
            font-weight: bold;
            color: steelblue;
        }
    </style>
</head>
<body>
    <header id="header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Default/Index">moviePhilosophy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 mx-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Default/Index">Ana Sayfa</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Filmler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/RastgeleFilm/RandomFilm">Bugün ne izlesem?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Hakkinda/">Hakkında</a>
                        </li>
                    </ul>
                    <div class="right">
                        <a href="/Giris/Index/"><button type="button" class="btn btn-secondary btn-sm"><i class="bi bi-person-fill"></i></button></a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
            <div class="container">
            <div class="movie-card">
                <div class="movie-poster">
                    <img src="~/img/@Model.Afis" alt="Movie Poster">
                </div>
                <div class="movie-info">
                    <h1 class="movie-title">@Model.FilmAd</h1>
                    <div class="movie-details">
                        <p><strong>Kategori :</strong> Bilim Kurgu</p>
                        <p><strong>Çıkış Yılı :</strong> @Model.Yil</p>
                        <p><strong>IMDB Puanı :</strong> @Model.FilmPuan</p>
                        <p><strong>Konusu :</strong> @Model.Detay</p>
                    </div>
                </div>
            </div>
        
        
            </div>
            <div class="cta-container">
                <p class="cta-text">Şansınıza bu film geldi! Ne kadar şanslısınız!</p>
            </div>
</body>
</html>

